                                    <a href="#">And a submenu &hellip;</a>
                                    <ul>
                                        <li><a href="#">Lorem ipsum dolor</a></li>
                                        <li><a href="#">Phasellus consequat</a></li>
                                        <li><a href="#">Magna phasellus</a></li>
                                        <li><a href="#">Etiam dolore nisl</a></li>
                                    </ul>
                                </li>
                                <li><a href="#">Veroeros feugiat</a></li>
                            </ul>
                        </li>
                        <li><a href="left-sidebar.html">Left Sidebar</a></li>
                        <li><a href="right-sidebar.html">Right Sidebar</a></li>
                        <li><a href="no-sidebar.html">No Sidebar</a></li>
                        -->
                    </ul>
                </nav>
            </div>
            {% if result.productos is defined and result.productos is not empty %}
                <!-- Banner -->
                <section id="banner">
                    {% include './'~result.folder~'/general/banner.html.twig' %}
                </section>
                <!-- Carousel -->
                <section class="carousel">
                    {% include './'~result.folder~'/general/carousel.html.twig' %}
                </section>
            {% endif %}
            
            <!-- Main -->                        
            {% if parameters is defined and ( parameters[0]['mision'] is defined or parameters[0]['vision'] is defined or parameters[0]['imgcorporative'] is defined ) %}
                <div class="wrapper style2">
                    <article id="main" class="container special">
                        {% if parameters[0]['imgcorporative'] is defined %}
                            <a href="#" class="image featured">
                                <img class="img-corporative" src="{{ absolute_url(asset('assets/'~result.folder~'/images/'~parameters[0]['imgcorporative'])) }}" alt="" />
                            </a>
                        {% endif %}                        
                        {% if parameters[0]['mision'] is defined %}
                            <header>
                                <h2><a href="#">Mision </a></h2>
                                <p>
                                    {{ parameters[0]['mision'] }}
                                </p>
                            </header>
                        {% endif %}
                        
                        {% if parameters[0]['vision'] is defined %}
                            <header>
                                <h2><a href="#">Vision</a></h2>
                                <p>
                                    {{ parameters[0]['vision'] }}
                                </p>
                            </header> 
                        {% endif %}
                                                                  
                    </article>
                </div>
            {% endif %}
            
            <!-- Features -->
            {% if result.aliados is defined and result.aliados is not empty %}
                <div class="wrapper style1">
                    <section id="features" class="container special">
                        {% include './'~result.folder~'/general/features.html.twig' %}
                    </section>
                </div>
            {% endif %}                

            <!-- Footer -->
            <div id="footer">
                {% include './'~result.folder~'/general/footer.html.twig' %} 
            </div>
        </div>
        {% include './'~result.folder~'/general/modal.html.twig' %}
    </body>
{% endblock %}
