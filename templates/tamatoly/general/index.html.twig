{% extends './'~result.folder~'/base.html.twig' %}

{% block body %}
    {% if result.parametros is defined and result.parametros is not empty %}
        {% set parameters = json_decode(result.parametros) %}                
    {% endif %}
    <body class="homepage is-preload">
        <div id="page-wrapper">
            <!-- Header -->
            <div id="header">
                <!-- Inner -->
                <div class="inner">
                    <header>                        
                        <h1>
                            <img class="icon-img" src="/assets/{{result.folder}}/images/tamatoly.png">
                            <a href="{{ path("general_home") }}" id="logo">{{ 'tamatoly l & f'|upper }}</a>
                        </h1>
                        <hr />                        
                        {% if parameters[0]['slogan'] is defined %}
                            <p>{{ parameters[0]['slogan'] }}</p>
                        {% endif %}
                    </header>
                    <footer>
                        <a href="#banner" class="button circled scrolly invima-icon"></a>
                    </footer>
                    
                    <div class="dVYIqU">                        
                        {% if result.whatsapp is defined and result.whatsapp is not empty %}
                            <a href="https://api.whatsapp.com/send?phone=+57{{ result.whatsapp }}&text=Hola!!%20Deseo%20información%20de%20los%20productos" target="_blank">
                                <img class="img-social-chat buttonNetwork" data-network="{{ result.notificaciones["whatsapp"] }}" src="{{ absolute_url(asset('assets/'~result.folder~'/images/wp.png')) }}">
                            </a><br>
                        {% endif %}
                        {% if result.facebook is defined and result.facebook is not empty %}
                            <a href="https://m.me/{{ result.facebook }}" target="_blank">
                                <img class="img-social-chat buttonNetwork" data-network="{{ result.notificaciones["facebook"] }}" src="{{ absolute_url(asset('assets/'~result.folder~'/images/fbmsn.png')) }}">
                            </a>                        
                        {% endif %}
                    </div>
                    
                </div>
                
                <!-- Nav -->
                <nav id="nav">                                                                               
                    <ul>
                        <li><a href="{{ path("general_home") }}">Inicio</a></li>
                        <li><a href="#banner">Nuestros Productos</a></li>
                        <li><a href="#main">Nosotros</a></li>
                        <li><a href="#features">Nuestros Clientes</a></li>
                        <li><a href="#contact">Contáctenos</a></li>
