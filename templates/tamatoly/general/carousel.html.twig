<!-- Carousel -->
{% if result.aliados is defined and result.aliados is not empty %}
    <div class="reel">    
        {% for producto in result.productos %}        
            <article>
                <a class="image featured">
                    <img class="img-product image-modal" src="{{ absolute_url(asset('assets/images/'~producto.fotos)) }}" alt="" />
                </a>
                <header>
                    <h2><a href="#">{{ producto.nombre }}</a></h2>
                    <h3><p>$ {{ producto.precio|number_format(0, '.', '.') }}</p></h3>                
                    <p>{{ producto.descripcion }}.</p>
                </header>                                    
            </article>
        {% endfor %}    
    </div>
{% endif %}

