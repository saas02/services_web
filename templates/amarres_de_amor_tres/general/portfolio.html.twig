{# empty Twig template #}
{% if result.productos is defined and result.productos is not empty %}      
    {% for producto in result.productos %}        
        <div class="col-md-4 col-sm-6">
            <!-- featured item -->
            <div class="featured-item ">
                <!-- image container -->
                <div class="figure">
                    <!-- image -->
                    <img class="img-responsive" src="{{ absolute_url(asset('assets/'~result.folder~'/images/'~producto.fotos)) }}" alt="" />
                    <!-- paragraph -->
                    
                    <p> 
                        {% if result.whatsapp is defined and result.whatsapp is not empty %}                        
                            <a href="https://api.whatsapp.com/send?phone=+57{{ result.whatsapp }}&text=Hola!!%20Deseo%20una%20consulta%20gratis" target="_blank" class="animated fadeIn btn btn-theme buttonNetwork" data-network="{{ result.notificaciones["whatsapp"] }}">
                                <i class="fa fa-whatsapp fa-6">
                                    Consulta Gratis!!!
                                </i>
                            </a>  
                        {% endif %}
                        {% if result.facebook is defined and result.facebook is not empty %}
                            &nbsp;&nbsp; 
                            <a href="https://api.whatsapp.com/send?phone=+57{{ result.facebook }}&text=Hola!!%20Deseo%20una%20consulta%20gratis" target="_blank" class="animated fadeIn btn btn-theme buttonNetwork" data-network="{{ result.notificaciones["facebook"] }}">
                                <i class="fa fa-facebook fa-6">
                                    Consulta Gratis!!!
                                </i>
                            </a>
                        {% endif %}
                    </p>
                </div>
                <!-- featured information -->
                <div class="featured-item-info">
                    <!-- featured title -->
                    <h4>{{ producto.nombre }}</h4>
                    <!-- horizontal line -->
                    <hr/>
                    <!-- some responce from social medial or web likes -->
                    <p> {{ producto.descripcion }}.</p>
                    <p> 
                        {% if result.whatsapp is defined and result.whatsapp is not empty %}
                            <a href="https://api.whatsapp.com/send?phone=+57{{ result.whatsapp }}&text=Hola!!%20Deseo%20una%20consulta%20gratis" target="_blank" class="animated fadeIn btn btn-theme buttonNetwork" data-network="{{ result.notificaciones["whatsapp"] }}">
                                <i class="fa fa-whatsapp fa-6">
                                    Consulta Gratis!!!
                                </i>
                            </a>                                                
                        {% endif %}
                        {% if result.facebook is defined and result.facebook is not empty %}
                            &nbsp;&nbsp; 
                            <a href="https://api.whatsapp.com/send?phone=+57{{ result.facebook }}&text=Hola!!%20Deseo%20una%20consulta%20gratis" target="_blank" class="animated fadeIn btn btn-theme buttonNetwork" data-network="{{ result.notificaciones["facebook"] }}">
                                <i class="fa fa-facebook fa-6">
                                    Consulta Gratis!!!
                                </i>
                            </a>
                        {% endif %}
                    </p>
                </div>
            </div>
        </div>
    {% endfor %}    
{% endif %}
