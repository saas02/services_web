{# empty Twig template #}
{% if result.productos is defined and result.productos is not empty %} 
    <div class="container">
        <div class="title text-center">            
            <h1 class="title-blue">Nuestros Servicios</h1>
        </div>
        <div class="row no-gutters">
            {% for producto in result.productos %}        
                <div class="col-md-4">
