<div class="container">
    <div class="row">
        <div class="col-md-6 col-lg-6 mb-4 mb-md-0">
            <h2 class="footer-heading">{{ result.nombre|capitalize }}</h2>
            {% if result.parametros is defined and result.parametros is not empty %}                            
                {% for parametros in json_decode(result.parametros) %}
                    {% set validateRedes = 0 %}
                    <ul class="ftco-footer-social p-0">
                        {% for index, parametro in parametros %}
                            {% if index == 'redes' %}                
                                {% set validateRedes = 1 %}
                                {% for key, redes in parametro %}                                    
                                    <li class="ftco-animate"><a href="{{ redes }}" data-toggle="tooltip" data-placement="top" title="Twitter"><span class="fa fa-{{ key|lower }}"></span></a></li>
                                {% endfor %}
                            {% endif %}
                        {% endfor %}
                    </ul>
                    {% if validateRedes == 0 %}
                        <!-- social link -->                                    
                        <ul class="ftco-footer-social p-0">
                            <li class="ftco-animate"><a href="#" data-toggle="tooltip" data-placement="top" title="Twitter"><span class="fa fa-twitter"></span></a></li>
                            <li class="ftco-animate"><a href="#" data-toggle="tooltip" data-placement="top" title="Facebook"><span class="fa fa-facebook"></span></a></li>
                            <li class="ftco-animate"><a href="#" data-toggle="tooltip" data-placement="top" title="Instagram"><span class="fa fa-instagram"></span></a></li>
                        </ul>
                    {% endif %}
                {% endfor %}
            {% else %}                            
                    <!-- social link -->                                
                    <ul class="ftco-footer-social p-0">
                        <li class="ftco-animate"><a href="#" data-toggle="tooltip" data-placement="top" title="Twitter"><span class="fa fa-twitter"></span></a></li>
                        <li class="ftco-animate"><a href="#" data-toggle="tooltip" data-placement="top" title="Facebook"><span class="fa fa-facebook"></span></a></li>
                        <li class="ftco-animate"><a href="#" data-toggle="tooltip" data-placement="top" title="Instagram"><span class="fa fa-instagram"></span></a></li>
                    </ul>                    
            {% endif %}  
            
            {% if result.whatsapp is defined and result.whatsapp is not empty %}
                <p>
                    <a href="https://api.whatsapp.com/send?phone=+57{{ result.whatsapp }}&text=Hola!!%20Deseo%20una%20consulta%20gratis" target="_blank" class="btn btn-quarternary buttonNetwork" data-network="{{ result.notificaciones["whatsapp"] }}">Consulta Gratis!!!</a>
                </p>                                            
            {% endif %}             
        </div>                
        <div class="col-md-8 col-lg-6 mb-4 mb-md-0">
            <h2 class="footer-heading">Tienes Preguntas?</h2>
            <div class="block-23 mb-3">
                <ul>                    
                    <li><a href="#"><span class="icon fa fa-phone"></span><span class="text">{{ result.telefono }}</span></a></li>                    
                </ul>
            </div>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-md-12 text-center">

            <p class="copyright"><!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                Copyright &copy;<script>document.write(new Date().getFullYear());</script> All rights reserved | made with <i class="fa fa-heart" aria-hidden="true"></i> by <a target="_blank">{{ result.nombre }}</a>
                <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. --></p>
        </div>
    </div>
</div>
