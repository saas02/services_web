{% if result.aliados is defined and result.aliados is not empty %}    
    {% for aliados in result.aliados %}
        <div class="item">
            <div class="testimony-wrap d-flex">
                <div class="user-img" style="background-image: url({{ absolute_url(asset('assets/'~result.folder~'/images/'~aliados.fotos))}})">
                </div>
                <div class="text pl-4">
                    <span class="quote d-flex align-items-center justify-content-center">
                        <i class="fa fa-quote-left"></i>
                    </span>
                    <p class="rate">
                        <span class="fa fa-star"></span>
                        <span class="fa fa-star"></span>
                        <span class="fa fa-star"></span>
                        <span class="fa fa-star"></span>
                        <span class="fa fa-star"></span>
                    </p>
                    <p>{{ aliados.informacion }}</p>
                    <p class="name">{{ aliados.nombre }}</p>                    
                </div>
            </div>
        </div> 
    {% endfor %}
{% endif %}